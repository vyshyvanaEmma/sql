-- interogazione delle tabbele
-- Il nome e l’anno di nascita degli studenti iscritti a SBC, in ordine rispetto al nome
select s.nomeS, s.annoN
from studenti S
where s.corsoLaurea = 'SBC'
order by s.nomeS;

-- Il nome ed il Dipartimento dei docenti di “Basi di Dati e Sistemi Informativi” o di “Informatica Generale”
select distinct d.nomeD, d.dipartimento
from docenti d
join corsi c on d.codDocente = c.codDocente
where c.nomeCorso = 'Basi di Dati e Sistemi Informativi'
	or c.nomeCorso = 'Informatica Generale';

-- Matricola e nome degli studenti di un corso di laurea triennale (tipoLaurea ='L') che seguono un corso di un docente di nome Felice.
select distinct s.matricola, s.nomeS
from studenti s
join corsidilaurea cl on s.corsoLaurea = cl.corsoLaurea
join frequenta f on s.matricola = f.matricola
join corsi c on f.codCorso = c.codCorso
join docenti d on c.codDocente = d.codDocente
where cl.tipoLaurea = 'L' and d.nomeD = 'Felice';

-- Per ogni tipo di laurea, il tipoLaurea e l’età media degli studenti
select cl.tipoLaurea, avg(year(now()) - s.AnnoN) eta_media_studenti
from corsidilaurea cl 
join studenti s on cl.corsoLaurea = s.corsoLaurea
group by cl.tipoLaurea;

-- Di ogni corso di un docente di nome Leoni, il CodCorso e il numero degli studenti che lo frequentano
select c.codCorso, d.nomeD, count(f.matricola) num_studenti
from docenti d
join corsi c on d.codDocente = c.codDocente
join frequenta f on c.codCorso = f.codCorso
where d.nomeD = 'Leoni'
group by c.codCorso;

-- Il codice dei corsi frequentati da più di 5 studenti e tenuti da docenti del Dipartimento di Informatica
select c.codCorso, count(f.matricola) num_studenti_frequantanho
from docenti d
join corsi c on d.codDocente = c.codDocente
join frequenta f on c.codCorso = f.codCorso
where d.dipartimento = 'Informatica'
group by c.codCorso
having count(f.matricola) > 5;

-- Per ogni studente della Facoltà di Lettere e Filisofia, la matricola ed il numero di corsi seguiti
select s.matricola, count(f.codCorso) num_corsi_seguiti
from studenti s
join corsidilaurea cl on s.corsoLaurea = cl.corsoLaurea
join frequenta f on s.matricola = f.matricola
where cl.facoltà = 'Lettere e Filosofia'
group by s.matricola;

-- Nome e CodDocente dei docenti che insegnano qualche corso seguito da più di 5 studenti
SELECT DISTINCT d.nomeD, d.codDocente
FROM docenti d
JOIN corsi c ON d.codDocente = c.codDocente
WHERE c.codCorso IN (
    SELECT f.codCorso
    FROM frequenta f
    GROUP BY f.codCorso
    HAVING COUNT(f.matricola) > 5
);


